<h1>Burger Munch Time</h1>

<h3>Devour the Burger!</h3>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}
        <button class="burger-eaten" data-id="{{this.id}}" data-justEaten="{{this.devoured}}">Devour</button>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h3>Burgers Devoured!</h3>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>{{this.burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Create a Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="bg">Burger Name:</label>
    <input type="text" id="bg" name="name">
  </div>

  <button type="submit">Add the Burger</button>
</form>
